    "solve:1:2": "tsx index.ts -d 1 -p 2",
    "solve:2:1": "tsx index.ts -d 2 -p 1",
    "solve:2:2": "tsx index.ts -d 2 -p 2",
    "solve:3:1": "tsx index.ts -d 3 -p 1",
    "solve:3:2": "tsx index.ts -d 3 -p 2",
    "solve:3:2:test": "tsx index.ts -d 3 -p 2 --test",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "ts-pattern": "^5.9.0"
